<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cie199.meme_generator.CaptionMemeActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_blank"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_weight="0.12"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/edt_caption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Dank Caption 1" />

    <EditText
        android:id="@+id/edt_caption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Dank Caption 2" />

    <Button
        android:id="@+id/btn_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:text="Push it for Glory" />
</LinearLayout>
